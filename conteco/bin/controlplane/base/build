#!/usr/bin/env bash
if [[ "$1" == "for-each-node" ]] ; then
(
	shift
    . executionplane-invoke "$0 $@"
	if [[ $# -gt 1 ]] ; then
		method=$1
		if [[ "$method" != "all" ]] ; then
			method="image"
		else
			shift
		fi
	else
		method="image"
	fi
	if [[ $# -gt 1 ]] ; then
		rootPath="${CONTECO_PWD}/${BASH_ARGV[0]}"
	else
		rootPath="${CONTECO_PWD}/$1"
	fi
	imageName="${CONTECO_REALM}/${CONTECO_ECOSYSTEM}.${CONTECO_TYPE}.${CONTECO_NAME}"
	case $method in
        image)
			.container build -t $imageName -f $rootPath/Dockerfile.static $rootPath
            ;;
        all)
			extract-and-execute $imageName build $@
# move to separate file: extract-and-execute
#			. executionplane-capture-output .container create $imageName
#			tmpfile=$(mktemp /tmp/scriptfile.XXXXXX)
#			.container cp $CONTECO_EXECUTIONPLANE_OUTPUT:/conteco/extract/controlplane/build $tmpfile
#            chmod 777 $tmpfile
#			$tmpfile $@
#			rm $tmpfile
# move to separate file: extract-and-execute
            ;;
		*)
			executionplane-error "Method needs repository node selection for execution."
			;;
	esac
    executionplane-complete
)
else
    export PATH="$CONTECO_EXECUTIONPLANE_APIINTERNALPATH"
	for-each $(basename $0) $@
fi

# build = build image
# build image 
# build image full
# build all
# build all full