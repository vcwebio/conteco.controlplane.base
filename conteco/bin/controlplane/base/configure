#!/usr/bin/env bash
if [[ "$1" == "for-each-node" ]] ; then
(
	shift
    . executionplane-invoke "$0 $@"
	if [[ $# -gt 1 ]] ; then
		method=$1
		shift
	else
		method="all"
	fi
	if [[ $# -gt 1 ]] ; then
		rootPath="${CONTECO_PWD}/${BASH_ARGV[0]}"
	else
		rootPath="${CONTECO_PWD}/$1"
	fi
	imageName="${CONTECO_REALM}/${CONTECO_ECOSYSTEM}.${CONTECO_TYPE}.${CONTECO_NAME}"
	case $method in
		add)
			.repository add . "$rootPath"
			;;
		build)
			cat $rootPath/Dockerfile | envsubst > $rootPath/Dockerfile.static
			;;
		cleanup)
			.repository branch -d "workspace" "$rootPath"
			;;
		commit)
			.repository commit -m "'${@:1:$#-1}'" "$rootPath"
			;;
		complete)
			.repository checkout conteco "$rootPath"
			.repository merge workspace "$rootPath"
			.repository tag -f "${CONTECO_TAG}" "$rootPath"
			;;
		extract)
			. executionplane-capture-output .container create $imageName
			destination="${CONTECO_PWD}/${CONTECO_REALM}/${CONTECO_ECOSYSTEM}.${CONTECO_TYPE}.${CONTECO_NAME}"
			executionplane mkdir -p $destination
			.container cp $CONTECO_EXECUTIONPLANE_OUTPUT:/conteco/repo/. $destination
			;;
		log)
			.repository log $rootPath
			;;
		load)
			.image pull "$imageName:${CONTECO_TAG}"
			.image tag "$imageName:${CONTECO_TAG}" "$imageName"
			;;
		prepare)
			.repository config --global user.email "$1" "$rootPath"
			.repository config --global user.name "$2" "$rootPath"
			.repository branch "workspace" "$rootPath"
			;;
		remove)
			.console rm -rf $rootPath
			;;
		remove-crs)
			remove-crs $rootPath
			;;
		unload)
			arguments=${@:1:$#-1}
			.image rm "$imageName" $arguments
			.image rm "$imageName:${CONTECO_TAG}" $arguments
			;;
		status)
			.repository status "$rootPath"
			;;
		*)
			executionplane-error "Method not recognised: $method."
			;;
	esac
    executionplane-complete
)
else
    export PATH="$CONTECO_EXECUTIONPLANE_APIINTERNALPATH"
	for-each $(basename $0) $@
fi
