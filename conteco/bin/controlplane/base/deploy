#!/usr/bin/env bash
if [[ "$1" == "for-each-node" ]] ; then
(
	shift
    . executionplane-invoke "$0 $@"
	if [[ $# -gt 1 ]] ; then
		method=$1
		if [[ " all image " != *"$method"* ]] ; then
			method="image"
		else
			shift
		fi
	else
		method="image"
	fi
	imageName="${CONTECO_REALM}/${CONTECO_ECOSYSTEM}.${CONTECO_TYPE}.${CONTECO_NAME}"
	case $method in
        "image")
			if [[ "$1" == "--redeploy" || "$1" == "--remove" ]] ; then
				# implement remove
				executionplane-error "Method $method --redeploy / --remove not implemented!"
			fi
			if [[ "$1" != "--remove" ]] ; then
				# implement deploy
				executionplane-error "Method $method --deploy not implemented!"
			fi
			;;
		all)
			extract-and-execute $imageName deploy $@
			;;
	esac
	executionplane-complete
)
else
    export PATH="$CONTECO_EXECUTIONPLANE_APIINTERNALPATH"
	for-each $(basename $0) $@
fi
