#!/usr/bin/env bash
(
  export PATH="$CONTECO_EXECUTIONPLANE_APIINTERNALPATH_BASE"
  . executionplane-invoke "$0 $@"
  imageName="${@: -1}"
	rootPath="/conteco/pwd/${imageName}"
	. $rootPath/environment

  case $1 in
		--info)
			. info-summary run
		;;
		*)
			executionplane-error "Method not recognised: $1."
		;;
	esac
  executionplane-complete
)
