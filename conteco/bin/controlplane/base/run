#!/usr/bin/env bash
if [[ "$1" == "for-each-node" ]] ; then
(
	shift
    . executionplane-invoke "$0 $@"
	# sets method executed by image specific handler.
	# five run modes: --boot --start --pause --stop --shutdown
	if [[ $# -gt 1 ]] ; then
		method=$1
		if [[ " --boot --start --pause --stop --shutdown " != *"$method"* ]] ; then
			method="--boot"
		else
			shift
		fi
	else
		method="--boot"
	fi
	imageName="${CONTECO_REALM}/${CONTECO_ECOSYSTEM}.${CONTECO_TYPE}.${CONTECO_NAME}"
	extract-and-execute $imageName run $method $@
    executionplane-complete
)
else
    export PATH="$CONTECO_EXECUTIONPLANE_APIINTERNALPATH"
	for-each $(basename $0) $@
fi
