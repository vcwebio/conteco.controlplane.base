#!/usr/bin/env bash
(
#    . executionplane-invoke "$0 $@"
    selector=$(set-selector "${BASH_ARGV[0]}")
	shopt -s nullglob

	if [[ $selector == *"$" ]] ; then
		selector="${selector::-1}"
	else
		selector="$selector*"
	fi
    for f in $selector ;
    do
    (
      . ./$f/environment
      if [[ "$2" == "--info" ]] ; then
      . for-each-info "$1"
      else
        $1 for-each-node ${@:2:$#-2} $f
      fi
    )
    done;
#    executionplane-complete
)
