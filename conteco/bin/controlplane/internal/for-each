#!/usr/bin/env bash
(
    . executionplane-invoke "$0 $@"
    selector=$(set-selector "${BASH_ARGV[0]}")
	shopt -s nullglob

	if [[ $selector == *"$" ]] ; then
		selector="${selector::-1}"
	else
		selector="$selector*"
	fi
    for f in $selector ;
    do
    (
        . ./$f/environment
		command=$1
        $command for-each-node ${@:2:$#-2} $f
    )
    done;
    executionplane-complete
)
