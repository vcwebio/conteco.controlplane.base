#!/usr/bin/env bash
(
    . executionplane-invoke "$0 $@"
    selector=$(set-selector "${BASH_ARGV[0]}")
	shopt -s nullglob
    for f in $selector* ;
    do
    (
        . ./$f/environment
		command=$1
		shift
        $command for-each-node ${@:1:$#-1} $f
    )
    done;
    executionplane-complete
)